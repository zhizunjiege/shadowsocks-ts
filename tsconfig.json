{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "sourceMap": false,
    "outDir": "./lib",
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
    "./node_modules/*"
  ]
}