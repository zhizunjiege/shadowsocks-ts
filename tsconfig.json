{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "sourceMap": false,
    "outDir": "build",
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules/*"
  ]
}